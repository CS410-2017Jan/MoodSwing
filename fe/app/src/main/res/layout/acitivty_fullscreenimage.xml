<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayout6">

        <ImageView
            android:id="@+id/imageFullScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/imageFullScreenIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_image"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout6">

        <Button
            android:id="@+id/keepbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/changebutton"
            android:layout_toStartOf="@+id/changebutton"
            android:layout_marginRight="48dp"
            android:layout_marginEnd="48dp" />

        <Button
            android:id="@+id/changebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="79dp"
            android:layout_marginEnd="79dp" />

    </RelativeLayout>

</RelativeLayout>
