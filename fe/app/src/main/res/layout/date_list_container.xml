<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_marginTop="2dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="@color/white"
    android:orientation="vertical"
    tools:showIn="@layout/journal_main"
    tools:context=".activity.JournalActivity">

    <TextView
    android:id="@+id/date"
    android:layout_width="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_height="wrap_content" />

    <ViewSwitcher
        android:id="@+id/title_viewswitcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="13dp"
            android:textStyle="bold"
            android:clickable="true"/>

        <RelativeLayout
            android:id="@+id/hiddenview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="65dp"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="3dp">

            <EditText
                android:id="@+id/hidden_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="13dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_saveTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@drawable/check" />

        </RelativeLayout>

    </ViewSwitcher>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/capture_recycler_view"
        android:background="#edf5ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
