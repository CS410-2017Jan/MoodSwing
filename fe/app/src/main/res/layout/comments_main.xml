<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    tools:showIn="@layout/activity_capture"
    tools:context=".activity.CaptureActivity">

    <RelativeLayout
        android:id="@+id/edit_comment_layout"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/commentInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/post_comment"
            android:layout_alignParentStart="true"
            android:background="@drawable/background_writecomment"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:inputType="textCapSentences" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/post_comment"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:paddingTop="8dp"
            android:paddingLeft="12dp"
            android:layout_alignParentRight="true"
            android:textSize="13dp"
            android:textStyle="bold"
            android:text="Post" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/edit_comment_layout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/comments_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

</RelativeLayout>